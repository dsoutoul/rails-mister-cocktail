<nav class="navbar navbar-dark bg-primary mb-5">
  <span class="navbar-text">
    <h2 class="text-white">List of your cocktails <%= link_to '+ New Cocktail', new_cocktail_path(@cocktail), class: "btn btn-primary" %></h2>
  </span>
</nav>


<div class="container">
  <div class="cards">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.url %>
      <% photo = cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% else %>
      <% photo = "https://d1ia71hq4oe7pn.cloudfront.net/og/75335251-1200px.jpg" %>
    <%end%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= photo %>); background-size: cover; background-repeat: none">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
  <%end%>
  </div>
</div>


