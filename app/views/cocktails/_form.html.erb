
<%= simple_form_for(@cocktail) do |f| %>
  <div class="form-inputs w-75">
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add a new cocktail", class: "btn btn-primary" %>
  </div>
<% end %>
